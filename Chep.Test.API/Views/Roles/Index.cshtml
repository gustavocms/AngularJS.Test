<div class="row" ng-app="RolesApp" ng-controller="TreeViewCtrl">
    <div class="col-md-10">

        <h3>Roles tree:</h3>

        <div ui-tree>
            <ol ui-tree-nodes="" ng-model="roles">
                <li ng-repeat="role in roles" ui-tree-node>
                    <div ui-tree-handle class="tree-node tree-node-content">
                        <a class="btn btn-success btn-xs" data-nodrag ng-click="toggle(this)"><span class="glyphicon" ng-class="{'glyphicon-chevron-right': collapsed, 'glyphicon-chevron-down': !collapsed}"></span></a>
                        {{role.Name}}
                    </div>
                    <ol ui-tree-nodes="" ng-model="role.Users">
                        <li ng-repeat="user in role.Users" ui-tree-node>
                            <div ui-tree-handle class="tree-node tree-node-content">
                                {{user.Login}}
                            </div>
                        </li>
                    </ol>
                </li>
            </ol>
        </div>
        

    </div>
</div>

@Scripts.Render("~/bundles/angular")

@section scripts {

    <script src="~/Scripts/Controllers/RolesController.js"></script>

}